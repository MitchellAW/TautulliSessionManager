{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        }
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "black-formatter.path": [
        "./.venv/bin/black"
    ],
}